<!-- Cadastro -->
<div class="container container-body ">
    <div class="div-cadastro">
        <h4 class="mb-3 alert alert-dark text-cadastro">Cadastro</h4>

        <form class="needs-validation" method="POST" action="#">

            <div class="mb-3">
                <label for="userName">Nome de usuário</label>
                <label style="color: red;">*</label>
                <input type="text" name="usuario" class="form-control" id="userName" maxlength="50" required />
                <div class="invalid-feedback">
                    Insira uma nome de usuário válido
                </div>
            </div>

            <div class="mb-3">
                <label for="name">Nome completo
                    <span class="text-muted"></span>
                </label>
                <label style="color: red;">*</label>
                <input type="text" class="form-control" id="name" name="nome" maxlength="100" required>
                <div class="invalid-feedback">
                    Insira um nome válido
                </div>
            </div>


            <div class="mb-3">
                <label for="email">E-mail
                    <span class="text-muted"></span>
                </label>
                <label style="color: red;">*</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="nome@exemplo.com"
                    maxlength="50" required>
                <div class="invalid-feedback">
                    Insira um email válido
                </div>
            </div>

            <div class="mb-3">
                <label for="address">Endereço</label>
                <input type="text" name="endereco" class="form-control" id="address"
                    placeholder="Rua barão do rio branco, 245, casa 1">
                <div class="invalid-feedback">
                    Insira um endereço válido
                </div>
            </div>

            <div class="row div-cadastro-row">

                <div class="col-md-4 mb-3">
                    <label for="state">Estado</label>
                    <select name="estado" class="custom-select d-block w-100" id="state">
                        <option value="">Escolha...</option>
                        <option>Alagoas</option>
                        <option>Bahia</option>
                        <option>Ceará</option>
                        <option>Maranhão</option>
                        <option>Paraíba</option>
                        <option>Pernambuco </option>
                        <option>Piauí </option>
                        <option>Rio Grande do Norte</option>
                        <option>Sergipe</option>
                    </select>
                    <div class="invalid-feedback">
                        Insira um estado válido
                    </div>
                </div>
                <div class="col-md-5 mb-3">
                    <label for="city">Cidade</label>
                    <input type="text" name="cidade" class="form-control" id="city" placeholder="">
                    <div class="invalid-feedback">
                        Insira uma cidade válida
                    </div>
                </div>
                <div class="col-md-3 mb-3" style="padding-right: 0px">
                    <label for="zip">CEP</label>
                    <input type="text" name="cep" class="form-control" oninput="mask(this, 'cep')" id="zip"
                        placeholder="00000-000">
                    <div class="invalid-feedback">
                        Insira um CEP válido
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label for="CPF">CPF</label>
                <input type="text" name="cpf" class="form-control" oninput="mask(this, 'cpf')" id="CPF"
                    placeholder="123.456.789-00">
                <div class="invalid-feedback">
                    Insira um cpf válido
                </div>
            </div>

            <div class="mb-3">
                <label for="password">Senha</label>
                <label style="color: red;">*</label>
                <input type="password" name="senha" class="form-control" id="password" placeholder="" maxlength="50"
                    required>
                <div class="invalid-feedback">
                    Insira uma senha válida
                </div>
            </div>

            <div class="mb-3">
                <label style="color: red; font-size: .8em;">* Campos obrigatórios</label>
            </div>

            <hr class="mb-4">
            <button class="btn btn-secondary btn-lg btn-block" type="submit">Criar conta</button>

        </form>

    </div>

</div>
<script src="js/mask.js"></script>
